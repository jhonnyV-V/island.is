    "/api/v1/signatures": {
      "get": {
        "operationId": "JournalController_signatures",
        "parameters": [
          {
            "name": "id",
            "required": false,
            "in": "query",
            "description": "Search for a specific signature by id",
            "schema": { "type": "string" }
          },
          {
            "name": "type",
            "required": false,
            "in": "query",
            "description": "Search for a specific signature by type",
            "example": "Regular",
